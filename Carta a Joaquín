  <script>
    function openLetter(){
      start.style.display='none'; sad.style.display='none'; book.style.display='block';
    }
    function sayNo(){ start.style.display='none'; sad.style.display='block'; }
    function nextPage(n){ document.getElementById('p'+n).classList.add('flipped'); }

    function showProposal(){
      document.getElementById('p4').classList.add('flipped');
      setTimeout(()=>{
        document.getElementById('book').style.display='none';
        document.getElementById('proposal').style.display='block';
      },900);
    }

